<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jmbrandewie.happybirthday.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-5dp">


        <ImageView
            android:id="@+id/tokyo_image"
            android:layout_width="200dp"
            android:layout_height="89dp"
            android:layout_below="@id/stars_image"
            android:laout_alignParentLeft="true"
            android:src="@drawable/tokyo" />

        <ImageView
            android:id="@+id/stars_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/stars"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="155dp" />

        <ImageView
            android:id="@+id/cello_image"
            android:layout_width="200dp"
            android:layout_height="82dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:src="@drawable/cello"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="1dp" />

        <ImageView
            android:id="@+id/books_image"
            android:layout_width="200dp"
            android:layout_height="107dp"
            android:src="@drawable/books"
            android:layout_below="@+id/tokyo_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/cello_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/cello_image"
            android:text="Cello"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cello_info"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/cello_name"
            android:layout_toRightOf="@id/cello_image"
            android:text="The cello is a portal to the msuic of each time period." />

        <TextView
            android:id="@+id/stars_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/cello_info"
            android:layout_toRightOf="@id/stars_image"
            android:text="Stars"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/stars_info"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/stars_name"
            android:layout_toRightOf="@id/stars_image"
            android:text="Stars are a portal to other worlds and solar systems!" />

        <TextView
            android:id="@+id/tokyo_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/stars_info"
            android:layout_toRightOf="@id/tokyo_image"
            android:text="Tokyo"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tokyo_info"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/tokyo_name"
            android:layout_toRightOf="@id/tokyo_image"
            android:text="Tokyo is an amazing city! It's a portal to a different culture." />

        <TextView
            android:id="@+id/books_name"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@id/tokyo_info"
            android:layout_toRightOf="@id/books_image"
            android:text="Reading"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/books_info"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/books_name"
            android:layout_toRightOf="@id/books_image"
            android:text="Books are a fantastic portal to whatever adventure you want!" />
        />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
